pipeline {
  triggers {
    pollSCM('H/3 * * * *')
  }
  options {
    disableConcurrentBuilds()
  }
  agent {
    label 'nodejs'
  }
  stages {
    stage ('Validate configuration resources') {
      steps {
        sh 'oc apply -k config --dry-run --validate'
      }
    }
    stage ('Apply resources') {
      when {
        branch 'main'
       }     
      steps {
        sh 'oc apply -k config'
        sh './wait_oauth.sh'
      }
    }
    stage ('Verify test user') {
      when {
        branch 'main'
}
      steps {
        sh 'oc login -u testuser -p redhat123 --insecure-skip-tls-verify=true --server=https://api.ocp4.example.com:6443'
        sh 'oc new-project test'
      }
    }
  }
}
